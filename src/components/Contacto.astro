---
import Section from "@/layouts/Section.astro";
import Form from "./Form.astro";
const cdnImage = import.meta.env.CDN_DOMAIN;

const imgMaps = `${cdnImage}/assets/img/maps-latrilogia.webp`;
const urlMaps = "https://goo.gl/maps/FP1MUzfF9WYwBBiq8";
const address = [
    `<p>C/ Sant Clement 4.</p> <p>46015 València, Valencia.</p><p>Tel: <a href="tel:193 26 55" class="hover:text-button">96 193 26 55</a></p><p><a href="mailto:web@restaurantelatrilogia.es" class="hover:text-button">web@restaurantelatrilogia.es</a></p>`,
];
---

<Section id="contacto">
    <div
        class="max-w-screen-xl mx-auto flex flex-col justify-center lg:flex-row gap-6 py-20"
    >
        <div class="flex flex-col px-4">
            <a href={urlMaps} target="_blank">
                <img src={imgMaps} alt="" title="" class="lg:w-96" />
            </a>
            <div class="pt-4 flex flex-col text-right">
                <p set:html={address} />
            </div>
        </div>
        <div class="bg-hero-contact p-4 bg-left-top bg-cover bg-no-repeat mx-4">
            <div
                class="bg-white flex flex-col gap-8 py-4 px-2 lg:p-12 text-center"
            >
                <h2 class="text-center text-4xl lg:text-6xl font-vidaloka">
                    Contacto
                </h2>
                <p>
                    Si tienes alguna duda, escríbenos rellenando el siguiente
                    formulario:
                </p>
                <Form />
            </div>
        </div>
    </div>
</Section>
