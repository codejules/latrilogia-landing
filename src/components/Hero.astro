---
import Section from "@/layouts/Section.astro";
const title = 'La trilogía de los placeres mediterráneos:';
const subtitle = 'comida saludable, clima y ambiente inmejorables';
---

<Section>
    <div
        class="mx-auto bg-hero-pattern w-full pt-20 lg:h-svh
            bg-cover bg-center md:bg-top bg-no-repeat md:bg-cover"
    >
        <div
            class="flex flex-col text-center pb-60 md:py-72 px-2"
        >
            <h2 class="text-xl md:text-4xl">
                {title}
            </h2>
            <h3 class="text-xl md:text-4xl font-semibold">
                {subtitle}
            </h3>
        </div>
    </div>
</Section>
