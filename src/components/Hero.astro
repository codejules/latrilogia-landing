---
import Section from "@/layouts/Section.astro";
const title = "La trilogía de los placeres mediterráneos:";
const subtitle = "comida saludable, clima y ambiente inmejorables";
const heroImg = "../../bg_latrilogia.webp";
---

<Section>
  <div class="relative w-full max-md:min-h-[400px] md:h-[560px] lg:h-screen overflow-hidden">
    <img
      src={heroImg}
      alt="Restaurante La Trilogía hero image"
      width="1920"
      height="1080"
      loading="eager"
      decoding="async"
      fetchpriority="high"
      class="absolute pt-24 h-full object-cover w-full"
    />

    <div
      class="flex flex-col text-pretty justify-center text-black items-center text-center h-full max-md:pt-20 md:pb-32"
    >
      <h2 class="text-xl md:text-4xl drop-shadow">{title}</h2>
      <h3 class="text-xl md:text-4xl font-semibold drop-shadow">
        {subtitle}
      </h3>
    </div>
  </div>
</Section>
