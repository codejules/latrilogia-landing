---
import Section from "@/layouts/Section.astro";
import politicaCookies from "@/data/politicaCookies.json";
---

<Section id="politica-cookies">
  <div
    class="max-w-screen-xl mx-auto flex flex-col justify-center pt-20 md:pt-36 lg:pt-52 px-4 pb-40"
  >
    <h2 class="text-4xl text-center pb-10 font-vidaloka">
      {politicaCookies.titulo}
    </h2>

    {
      politicaCookies.contenido.map((item, index) => {
        return (
          <div>
            {item.parrafo && <p>{item.parrafo}</p>}

            {item.titulo && (
              <>
                <h2>{item.titulo}</h2>
                {item.cookies &&
                  item.cookies.map((cookie, idx) => (
                    <p>
                      {typeof cookie === "object" ? (
                        <>
                          <strong>{cookie.tipo}:</strong> {cookie.descripcion}
                        </>
                      ) : (
                        cookie
                      )}
                    </p>
                  ))}
              </>
            )}
          </div>
        );
      })
    }
  </div>
</Section>
